{
  "name": "portfolio-dashboard-server",
  "version": "1.0.0",
  "description": "Node.js Express backend for portfolio dashboard",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node src/index.ts",

    "build:frontend": "npm --prefix ../client install && npm --prefix ../client run build",
    "copy:frontend": "rm -rf dist/public && mkdir -p dist/public && cp -r ../client/dist/* dist/public/",

    "build:backend": "tsc",

    "build": "npm run build:frontend && npm run build:backend && npm run copy:frontend",

    "start": "node dist/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "node-fetch": "^3.3.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2"
  }
}
